<h1><%= @deck.name %></h1>
<p><%= @deck.deck_type %></p>

<h3>Cards in this deck</h3>
<%= link_to "Shuffle this deck", deck_path(@deck, sort: 'random()') %>
<%= link_to "Sort this deck", deck_path(@deck, sort: 'suit') %>

<ul>
    <% @cards.each do |card| %>
        <li>
            <%= card.name %>
        </li>
    <% end %>
</ul>
<%= link_to "Back to Deck List", decks_path %>
